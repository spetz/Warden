@model Warden.Web.ViewModels.ChangePasswordViewModel
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<div class="row">
    <div class="col s12 m8 l6 offset-m2 offset-l3">
        <div class="row card-panel">
            <h5 class="center-align custom-text">Change password</h5>
            <form asp-controller="Settings" asp-action="Password" asp-anti-forgery="true" method="POST" data-block>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="password" class="validate" asp-for="ActualPassword" />
                        <label asp-for="ActualPassword">Actual password</label>
                        <span asp-validation-for="ActualPassword"></span>
                    </div>
                    <div class="input-field col s12">
                        <input type="password" class="validate" asp-for="NewPassword" />
                        <label asp-for="NewPassword">New password</label>
                        <span asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="input-field col s12">
                        <input type="password" class="validate" asp-for="ConfirmNewPassword" />
                        <label asp-for="ConfirmNewPassword">Confirm new password</label>
                        <span asp-validation-for="ConfirmNewPassword"></span>
                    </div>
                    <div class="divider"></div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <button class="btn waves-effect waves-light custom right" type="submit">Set password</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
