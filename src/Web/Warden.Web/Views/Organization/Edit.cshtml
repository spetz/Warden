@model Warden.Web.ViewModels.EditOrganizationViewModel
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<div class="row">
    <div class="col s12 m8 l6 offset-m2 offset-l3">
        <div class="row card-panel">
            <h5 class="center-align custom-text">Edit organization</h5>
            <form asp-controller="Organization" asp-action="Edit" asp-anti-forgery="true" method="POST" data-block>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" class="validate" asp-for="Name" />
                        <label asp-for="Name">Name</label>
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <button class="btn waves-effect waves-light custom right" type="submit">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
