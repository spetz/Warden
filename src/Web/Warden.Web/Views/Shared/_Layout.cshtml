@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"
@{
    var url = Context.Request.Path;
}
<!DOCTYPE html>
<html>
<head>
    <title>Warden Web Panel</title>
    <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <environment names="Development">
        <link type="text/css" rel="stylesheet" href="~/content/lib/materialize/dist/css/materialize.css" media="screen,projection"/>
        <link type="text/css" rel="stylesheet" href="~/content/css/site.css" media="screen,projection"/>
        <script type="text/javascript" src="~/content/lib/jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="~/content/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script type="text/javascript" src="~/content/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script type="text/javascript" src="~/content/lib/materialize/dist/js/materialize.js"></script>
        <script type="text/javascript" src="~/content/lib/Chart.js/Chart.js"></script>
        <script type="text/javascript" src="~/content/lib/signalr/jquery.signalR.js"></script>
        <script type="text/javascript" src="~/content/lib/knockout/dist/knockout.debug.js"></script>
        <script type="text/javascript" src="~/content/js/app.js"></script>
        <script type="text/javascript" src="~/content/js/dashboard.js"></script>
    </environment>
    <environment names="Staging,Production">
        <link type="text/css" rel="stylesheet" href="~/content/lib/materialize/dist/css/materialize.min.css" media="screen,projection"/>
        <link type="text/css" rel="stylesheet" href="~/content/css/site.min.css" media="screen,projection"/>
        <script type="text/javascript" src="~/content/lib/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="~/content/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script type="text/javascript" src="~/content/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script type="text/javascript" src="~/content/lib/materialize/dist/js/materialize.min.js"></script>
        <script type="text/javascript" src="~/content/lib/Chart.js/Chart.js"></script>
        <script type="text/javascript" src="~/content/lib/signalr/jquery.signalR.min.js"></script>
        <script type="text/javascript" src="~/content/lib/knockout/dist/knockout.js"></script>
        <script type="text/javascript" src="~/content/js/site.min.js"></script>
    </environment>
    @RenderSection("head", false)
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
@Html.Partial("_Nav")
<div class="container">
    @RenderBody()
</div>
@Html.Partial("_Notifications")
<script type="text/javascript">
    $(function() {
        app.init({
            loginPath: "/login",
            logoutPath: "/logout",
            url: "@url"
        });
    });
</script>
@RenderSection("scripts", false)
</body>
</html>